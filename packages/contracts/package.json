{
  "name": "@ubiquity/contracts",
  "version": "1.0.1-beta",
  "private": true,
  "description": "Ubiquity Dollar Ethereum smart contracts",
  "author": "Ubiquity DAO",
  "license": "Apache-2.0",
  "homepage": "https://dao.ubq.fi/dollar",
  "bugs": {
    "url": "https://github.com/ubiquity/ubiquity-dollar/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ubiquity/ubiquity-dollar.git"
  },
  "dependencies": {
    "@tanstack/query-core": "^4.24.4",
    "@tanstack/query-persist-client-core": "^4.24.4",
    "@types/command-line-args": "5.2.0",
    "command-line-args": "5.2.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.6.9",
    "npm-run-all": "^4.1.5",
    "react-transition-group": "^4.4.5",
    "tsx": "^3.12.2"
  },
  "scripts": {
    "forge": "forge",
    "prebuild": "run-p clean",
    "build": "forge build",
    "test": "tsx ./scripts/runner/runner.ts",
    "test:slither": "slither . --compile-force-framework foundry",
    "test:echidna": "echidna-test . --config echidna.config.yml",
    "deploy": "tsx ./scripts/deploy/deploy.ts",
    "clean": "run-p clean:*",
    "clean:forge": "forge clean",
    "clean:yarn": "yarn clean",
    "task": "tsx ./scripts/task/task.ts",
    "_fix:submodules": "git submodule update --init --recursive",
    "run:anvil": "tsx ./scripts/anvil/anvil.ts",
    "deploy:development": "tsx ./scripts/deploy/dollar/DevelopmentDeploy.ts"
  },
  "lavamoat": {
    "allowScripts": {
      "core-js": false,
      "keccak": false,
      "secp256k1": false,
      "web3": false,
      "bufferutil": false,
      "utf-8-validate": false,
      "core-js-pure": false,
      "postinstall-postinstall": false,
      "husky": false
    }
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react-transition-group": "^4",
    "cspell": "latest",
    "typescript": "^4.9.5"
  }
}
