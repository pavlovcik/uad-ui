{
  "name": "@ubiquity/monorepo",
  "version": "1.0.1-beta",
  "private": true,
  "author": "Ubiquity DAO",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/dapp",
    "packages/contracts"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@lavamoat/allow-scripts": "^2.3.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "cspell": "^6.20.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsc": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "rimraf": "^4.1.2",
    "yarn-audit-fix": "^9.3.8"
  },
  "scripts": {
    "build:all": "yarn workspaces foreach run build",
    "build:dapp": "yarn workspace @ubiquity/dapp run build",
    "dev:dapp": "yarn workspace @ubiquity/dapp run start",
    "test:all": "yarn workspaces foreach run test",
    "purge:all": "yarn workspaces foreach run purge && rimraf node_modules",
    "prettier:all": "yarn workspaces foreach run prettier",
    "lint:all": "yarn workspaces foreach run lint",
    "build:ci:cloudflare": "bash ./utils/build_cloudflare.sh",
    "build:ci:netlify": "yarn build:all",
    "postinstall": "husky install",
    "lint:cspell:all": "cspell $(find . -type f \\( -name '*.sol' -o -name '*.tsx' -o -name '*.ts' \\) ! -path '*/node_modules/*' ! -path '*/lib/*' ! -path '*/types/*')"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint --fix",
      "cspell --no-must-find-files"
    ],
    "*.sol": [
      "prettier --write",
      "cspell --no-must-find-files"
    ]
  },
  "packageManager": "yarn@3.2.3",
  "lavamoat": {
    "allowScripts": {
      "$root$": true,
      "bufferutil": true,
      "utf-8-validate": true,
      "styled-components": false,
      "keccak": true,
      "dtrace-provider": true,
      "bigint-buffer": true,
      "secp256k1": true,
      "classic-level": true,
      "@ubiquity/monorepo": true,
      "napi-macros/example": true,
      "husky": true
    }
  },
  "dependencies": {
    "@tanstack/query-core": "^4.24.4",
    "@tanstack/query-persist-client-core": "^4.24.4",
    "tsx": "^3.12.2",
    "typescript": "^4.9.5"
  }
}
