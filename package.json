{
  "name": "@ubiquity/dollar",
  "license": "MIT",
  "scripts": {
    "prebuild:cd": "yarn",
    "build:cd": "run-s install:env _deps:contracts:dollar _deps:contracts:nft build:contracts build:next",
    "deps:contracts": "run-p _deps:contracts:*",
    "install:env": "cp .env.example .env",
    "_deps:contracts:dollar": "cd ./contracts/dollar && yarn",
    "_deps:contracts:nft": "cd ./contracts/ubiquistick && yarn",
    "build:contracts": "run-s _build:contracts _build:artifacts _build:typechain _build:summary",
    "_build:typechain": "typechain --target=ethers-v5 --out-dir ./fixtures/abi/types ./fixtures/abi/*.json",
    "_build:contracts": "run-p _build:contracts:*",
    "_build:contracts:nft": "cd ./contracts/ubiquistick && yarn build",
    "_build:contracts:dollar": "cd ./contracts/dollar && yarn build",
    "_build:artifacts": "run-p _build:artifacts:*",
    "_build:artifacts:nft": "bash ./utils/build-artifacts.sh ./contracts/ubiquistick",
    "_build:artifacts:dollar": "bash ./utils/build-artifacts.sh ./contracts/dollar",
    "_build:summary": "node ./utils/generate_contracts_addresses.js",
    "test:all": "run-s _test:*",
    "_test:dollar": "cd ./contracts/dollar && yarn test",
    "lint:all": "run-s _lint:*",
    "_lint:dollar": "cd ./contracts/dollar && yarn lint",
    "format": "run-p _format:*",
    "_format:prettier": "prettier --write .",
    "_format:eslint": "eslint . --ext .ts,.tsx --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
    "build:next": "next build && next export --outdir dist",
    "__test:watch:ci": "nodemon"
  },
  "reference_scripts": {
    "start": "run-s install:env install:contracts dev",
    "start:headless": "run-s install:env install:contracts dev:contracts",
    "build": "run-s build:*",
    "build:ui": "yarn next build",
    "dev": "run-p dev:*",
    "dev:contracts": "./utils/dev-chain-init.sh",
    "dev:ui": "next dev",
    "_clean": "run-p _clean:*",
    "_clean:dollar": "cd ./contracts/dollar && yarn clean",
    "_clean:nft": "cd ./contracts/ubiquistick && yarn clean",
    "contracts:run:nft": "cd ./contracts/ubiquistick && hardhat node --hostname 0.0.0.0 --fork-block-number 14800000",
    "contracts:run:faucet": "cd ./contracts/dollar && yarn node:faucet",
    "prepare": "husky install",
    "killscript": "kill `ps | grep dev-chain-init.sh | grep -v grep | awk '{ print $1 }'`",
    "__format:cspell": "cspell '**'"
  },
  "devDependencies": {
    "@cspell/dict-bash": "^2.0.4",
    "@cspell/dict-cryptocurrencies": "^2.0.0",
    "@cspell/dict-typescript": "^2.0.1",
    "@ethersproject/providers": "^5.0.0",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tsc": "^2.0.0",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.5",
    "@typechain/ethers-v5": "^10.1.0",
    "autoprefixer": "^10.4.8",
    "classnames": "^2.3.1",
    "ethers": "^5.5.4",
    "hardhat": "^2.10.1",
    "next": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.4",
    "tailwindcss": "^3.1.7",
    "typechain": "^8.1.0"
  },
  "nodemonConfig": {
    "events": {
      "config": "",
      "exit": "",
      "crash": "",
      "restart": "clear && printf '\\033[3J'",
      "start": "clear && printf '\\033[3J'"
    },
    "verbose": true,
    "ignore": [
      "**/*.json",
      "fixtures/**",
      "contracts/*/types/**",
      "**/*/cache/",
      "**/*/artifacts/"
    ],
    "ext": "ts,sh",
    "exec": "yarn build:fleek"
  }
}
